# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# controllers for gui access
GET    /                                                        controllers.gui.HomeController.index
GET    /manage/show                                             controllers.gui.manage.MallCategoryController.catgory()
POST   /manage/catgory/search                                   controllers.gui.manage.MallCategoryController.search()
GET    /manage/catgory/create                                   controllers.gui.manage.MallCategoryController.create()
POST   /manage/catgory/save                                     controllers.gui.manage.MallCategoryController.save()
POST   /manage/catgory/update                                   controllers.gui.manage.MallCategoryController.update()
GET    /manage/catgory/getOneEdit/:id                           controllers.gui.manage.MallCategoryController.getOneEdit(id: Long)
POST   /manage/catgory/updateOne/:id                            controllers.gui.manage.MallCategoryController.updateOne(id: Long)

GET    /product/search                                          controllers.gui.ProductController.searchGoods()
GET    /search/:kw/:start/:rows/:sort/:fq                       controllers.gui.ProductController.generalGoods(kw: String, start: Integer, rows: Integer, sort: String, fq: String)
GET    /product/detail                                          controllers.gui.ProductController.productDetail

GET    /home/editPage/:id                                       controllers.gui.HomeController.editPage(id: Long)
POST   /home/edit/:id                                           controllers.gui.HomeController.edit(id: Long)
POST   /home/delete/:id                                         controllers.gui.HomeController.delete(id: Long)
POST   /home/add                                                controllers.gui.HomeController.add()

GET    /login                                                   controllers.gui.UserController.loginTop()
POST   /login                                                   controllers.gui.UserController.login()
GET    /register                                                controllers.gui.UserController.registerTop()
POST   /register                                                controllers.gui.UserController.register()

# manage
GET     /manage                                                 controllers.gui.manage.IndexController.index

GET     /manage/cate/map                                        controllers.gui.manage.CategoryController.getRootCates
GET     /manage/cate/map/getleafcate/:cateRootId                controllers.gui.manage.CategoryController.getLeafCates(cateRootId: String)
POST    /manage/cate/map/findmallcate                           controllers.gui.manage.CategoryController.getMallCates
POST    /manage/cate/map/edit                                   controllers.gui.manage.CategoryController.edit
# controllers for manage kbjCate
GET     /manage/kbjcate/index                                   controllers.gui.manage.kbjCategoryController.index()
POST    /manage/kbjcate/find                                    controllers.gui.manage.kbjCategoryController.list(s ?= "id", o ?= "asc")
GET     /manage/kbjcate/add                                     controllers.gui.manage.kbjCategoryController.add()
POST    /manage/kbjcate/save                                    controllers.gui.manage.kbjCategoryController.save()
GET     /manage/kbjcate/edit/id                                 controllers.gui.manage.kbjCategoryController.update(id:Long)
GET     /manage/kbjcate/upd/priority                            controllers.gui.manage.kbjCategoryController.updPriority(isUpOrDown:Boolean, id:Long, priority:Integer, page:Int)

GET     /trend/:mall/:skuid                                     controllers.gui.DailyPriceController.priceTrend(mall:String, skuid:String)

GET     /manage/user/show                                       controllers.gui.manage.UserController.show()
POST    /manage/user/find                                       controllers.gui.manage.UserController.find()
POST    /manage/user/update                                     controllers.gui.manage.UserController.update()

