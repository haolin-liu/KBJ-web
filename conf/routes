# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# controllers for gui access
GET     /                     controllers.gui.HomeController.index

GET    /product/search        controllers.gui.ProductController.search

GET    /product/detail        controllers.gui.ProductController.productDetail

# controllers for api access for app.
GET     /api/                 controllers.api.HomeController.index


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file         controllers.Assets.versioned(path="/public", file: Asset)
